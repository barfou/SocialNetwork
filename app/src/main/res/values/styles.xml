<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!--Components-->
    <style name="footerLayoutStyle">
        <item name="android:background">?colorPrimary</item>
    </style>

    <!--BottomNavigationView-->
    <style name="ThemeOverlay.MyTheme.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:backgroundTint">?colorSecondary</item>
        <item name="itemIconTint">?colorOnSecondary</item>
        <item name="itemTextColor">?colorOnSecondary</item>
    </style>
    <!--Bottom Sheets-->
    <style name="ThemeOverlay.MyTheme.BottomSheetDialog" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/Animation.MyTheme.BottomSheet.Modal</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="bottomSheetStyle">@style/Widget.MyTheme.BottomSheet.Modal</item>
        <item name="android:navigationBarColor">?colorSurface</item>
        <item name="android:navigationBarDividerColor" tools:ignore="NewApi">@android:color/transparent</item>
    </style>
    <style name="Widget.MyTheme.BottomSheet.Modal" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="shapeAppearanceOverlay">?shapeAppearanceLargeComponent</item>
    </style>
    <!--Navigation Drawer-->
    <style name="Widget.MyTheme.NavigationView" parent="Widget.MaterialComponents.NavigationView">
        <item name="itemTextAppearance">?textAppearanceBody2</item>
    </style>

    <style name="Card">
        <item name="background">@color/color_surface</item>
    </style>
    <style name="Background">
        <item name="background">@color/color_background</item>
    </style>
    <style name="Toolbar">
        <item name="background">@color/color_surface</item>
    </style>
    <style name="Separator">
        <item name="background">@color/color_on_background</item>
    </style>
    <style name="CircularCard">
        <item name="android:background">@color/color_surface</item>
    </style>
    <style name="EditTextLoginActivity">
        <item name="android:background">@drawable/edit_text_login</item>
        <item name="android:layout_height">26dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingHorizontal">10dp</item>
        <item name="android:fontFamily">@font/capriola_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/color_body1</item>
        <item name="android:drawablePadding">20dp</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="ButtonStyle">
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:fontFamily">@font/russo_one_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/color_body1</item>
    </style>
    <style name="ButtonStyleQuit">
        <item name="android:background">@drawable/rounded_button_quit</item>
        <item name="android:fontFamily">@font/russo_one_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/color_body1</item>
    </style>
    <style name="ButtonStyleGrey">
        <item name="android:background">@drawable/rounded_button_grey</item>
        <item name="alpha">0.5</item>
        <item name="android:fontFamily">@font/russo_one_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/color_body1</item>
    </style>
    <style name="ProgressBarStyle">
        <item name="android:translationZ">2dp</item>
    </style>
    <style name="TransparentTextView">
        <item name="android:background">@color/color_button_grey</item>
        <item name="android:fontFamily">@font/capriola_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/color_body1</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="HolderUser">
        <item name="android:fontFamily">@font/paytone_regular</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/color_body1</item>
        <item name="android:gravity">center</item>
    </style>

</resources>
